<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boram.section01.remix.model.dao.EmployeeMapperNamKyu">
    <resultMap id="EmployeeResultMap" type="com.boram.section01.remix.model.dto.EmployeeDTONamKyu">
        <id property="empID" column="EMP_ID"/>
        <result property="empName" column="EMP_NAME"/>
        <result property="empNo" column="EMP_NO"/>
        <result property="salary" column="SALARY"/>
        <result property="bonus" column="BONUS"/>
    </resultMap>

    <select id="selectAllEmployee" resultMap="EmployeeResultMap">
        SELECT
            EMP_ID,
            EMP_NAME,
            EMP_NO,
            SALARY,
            BONUS
        FROM
            EMPLOYEE

    </select>

    <select id="selectEmployeeByBonus" resultMap="EmployeeResultMap" resultType="_double">
        SELECT
            *
        FROM
            EMPLOYEE
        WHERE
            BONUS != 'NULL'
        AND
            EMP_ID = #{empId}
    </select>

</mapper>